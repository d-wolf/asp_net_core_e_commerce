@model Category

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header border-0 bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Create Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="DisplayOrder" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="DisplayOrder">
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-light w-100" asp-controller="Category" asp-action="Index">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}