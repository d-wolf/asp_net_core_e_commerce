@model Company

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header border-0 bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">@(Model.Id != 0 ? "Edit Product" : "Create Product")</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" hidden>
                <div class="form-group">
                    <label asp-for="Name" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="StreetAddress" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="StreetAddress">
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="City" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="State" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="State">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="PostalCode" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="PostalCode">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="PhoneNumber" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">@(Model.Id != 0 ? "Update" :
                            "Create")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-light w-100" asp-controller="Company" asp-action="Index">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}