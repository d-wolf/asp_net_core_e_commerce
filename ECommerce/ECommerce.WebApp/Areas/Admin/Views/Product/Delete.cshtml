@model Product

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header border-0 bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Delete Product</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Title" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Title" disabled>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Description" class="pb-2"></label>
                    <textarea class="form-control" asp-for="Description" rows="5" disabled></textarea>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="ISBN" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="ISBN" disabled>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Author" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Author" disabled>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="ListPrice" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="ListPrice" disabled>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Price" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Price" disabled>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Price50" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Price50" disabled>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Price100" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Price100" disabled>
                </div>

                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-light w-100" asp-controller="Product" asp-action="Index">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>