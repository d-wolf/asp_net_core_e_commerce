@model ProductVM

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header border-0 bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">@(Model.Product.Id != 0 ? "Edit Product" : "Create Product")</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Product.Id" hidden>
                <div class="form-group">
                    <label asp-for="Product.Title" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Product.Title">
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.ISBN" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Product.ISBN">
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.Author" class="pb-2"></label>
                    <input type="text" class="form-control" asp-for="Product.Author">
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.Description" class="pb-2"></label>
                    <textarea class="form-control" asp-for="Product.Description" rows="5"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.ListPrice" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Product.ListPrice">
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.Price" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Product.Price">
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.Price50" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Product.Price50">
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.Price100" class="pb-2"></label>
                    <input type="number" class="form-control" asp-for="Product.Price100">
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.ProductImages" class="pb-2"></label>
                    <input type="file" name="files" class="form-control" multiple>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Product.CategoryId" class="pb-2"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select"
                        aria-label="Default select example">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="row row-cols-2 row-cols-lg-3">
                    @foreach (var img in Model.Product.ProductImages)
                    {
                        <div class="col py-4">
                            <img src="@img.ImageUrl" width="100%" />
                            <div class="mt-2">
                                <a class="btn btn-danger" asp-action="DeleteImage" asp-route-id="@img.Id"><i class="bi bi-trash3-fill"></i> Delete</a>
                            </div>
                        </div>
                    }
                </div>


                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">@(Model.Product.Id != 0 ? "Update" :
                            "Create")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-light w-100" asp-controller="Product" asp-action="Index">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}