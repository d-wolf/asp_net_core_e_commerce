@model Category

<div class="container">
    <h2 class="text-primary">Delete Category</h2>
    <form method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" disabled>
        </div>
        <div class="form-group mt-4">
            <label asp-for="DisplayOrder"></label>
            <input type="number" class="form-control" asp-for="DisplayOrder" disabled>
        </div>

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger w-100">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-light w-100" asp-controller="Category" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>